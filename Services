-NAME Check WUAUSERV
  WIN_SERVICE:
    NAME: WUAUSERV
    STATE: STARTED
  WHEN: WUAUSERV_CONFIG.CHANGED


  -NAME Check Multiple Services
  TASKS:
    NAME: Check Servce Status
    command: systemctl status "{{ item }}"
      with items:-
        -WUAUSERV
        -SPOOLER
      REGISTER: Result
      NAME: {{item}}
      STATE: STARTED
      When '{{item}}'_CONFIG.CHANGED
